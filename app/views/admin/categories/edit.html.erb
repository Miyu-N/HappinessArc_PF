<div class="container pt-5 pb-5">
  <div class="row mt-3 mb-5">
    <div class="col-md-6">
    <h3>カテゴリー編集</h3>
    <%= form_with model:@category,url: admin_category_path, local:true, class: "form-inline mt-5" do |f| %>
      <div class="form-group">
        <%= f.label :name, "カテゴリー", class: "mb-2 mr-sm-3" %>
        <%= f.text_field :name, placeholder: "カテゴリー名", class: "form-control mb-2 mr-3"%>
      </div>
      <div class="form-group">
        <%= f.submit "変更を保存", class:"btn btn-success mb-2" %>
      </div>
    <% end %>
  </div>
</div>
</div>