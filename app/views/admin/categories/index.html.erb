<div class="container">
  <div class="row mt-3 mb-3">
    <div class="col-md-6">
      <h3 class="mb-4">カテゴリー一覧・追加</h3>
      <%= form_with model:@category,url: admin_categories_path, local: true, class: "form-inline" do |f| %>
        <%= f.label :name, "カテゴリー", class: "mb-2 mr-sm-2 " %>
        <%= f.text_field :name, placeholder: "カテゴリー名", class: "form-control mb-2 mr-2"%>
        <%= f.submit '新規登録', class:"btn btn-success mb-2" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <table class="table table-hover table-inverse">
        <thead>
          <tr align="center">
            <th style="width: 50%">カテゴリー</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr align="center">
              <td><%= category.name %></td>
              <td><%= link_to '編集する', edit_admin_category_path(category.id), class: "text-secondary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>