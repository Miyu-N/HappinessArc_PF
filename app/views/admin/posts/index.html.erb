<div class="container">
  <%= render "admin/searchs/search", categories: @categories, category: @category %>
  <div class="texts-wrapper">
    <div class="contents-title text-center">
      <div class="row">
        <% @posts.each do |post| %>
          <div class="col-12 col-md-6 col-lg-4">
            <div class="card">
             <%= link_to attachment_image_tag(post, :image, format: "jpeg", size: "260x210", fallback: "no_image.jpg"), admin_post_path(post.id) %>
              <div class="card-body">
              <p class="card-title">
                <%= link_to post.title, admin_post_path(post.id), class: "text-muted" %>
              </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <%= paginate @posts %>
  </div>
</div>

