<div class="container">
  <div class="row mx-auto col">
    <div class="mt-3">
      <div>
        <%= render "admin/searchs/search", categories: @categories, category: @category %>
      </div>
    </div>
    <div class="row justify-content-center mt-5">
      <div class="col-md-6 text-center">
        <%= attachment_image_tag @post, :image, format: "jpeg", size: "400x300", fallback: "no_image.jpg", class: "img-fluid" %>
      </div>
      <div class="row col-md-6">
        <div class="col-10">
          <h3 class="font-weight-bold"><%= @post.title %></h3>
          <%= @post.user.username %>
        </div>
        <div class="col-10">
          <p>カテゴリー：<%= @post.category.name %></p>
          <p>投稿内容：<%= @post.body %></p>
        </div>
      </div>
    </div>
  </div>
</div>