<div class="container mt-3">
  <% if @model == "customer" %>
  <div class="row mt-3">
    <div class="col-md-10 mx-auto">
      <h3>ユーザー一覧</h3>
      <table class="table table-hover table-inverse table-responsive-md mt-3">
        <thead class="table-active">
          <tr>
            <th>ユーザーID</th>
            <th>名前</th>
            <th>メールアドレス</th>
            <th>ユーザーネーム</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @datas.each do |user| %>
            <tr>
              <td>
                <%= user.id %>
              </td>
              <td>
                <%= link_to admin_user_path(customer), class: "btn-link text-dark" do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td>
                <%= user.email %>
              </td>
              <td>
                <% if user.is_deleted == true %>
                  <p class="text-secondary">退会</p>
                <% else %>
                  <p class="text-success">有効</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <% elsif @model == "post" %>
  <div class="row mb-3">
    <div class="col-md-8 mx-auto">
      <h3>投稿一覧</h3>
    </div>
    <div class="col-md-2" >
      <%= link_to '', new_admin_post_path, class: "fas fa-plus-circle fa-3x add-item" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 mx-auto">
      <div class="items-all">
        <table class="table table-hover">
          <thead class="table-active">
            <tr>
              <th class="align-middle text-center" style="width: 10%">投稿ID</th>
              <th class="align-middle text-center" style="width: 25%">タイトル</th>
              <th class="align-middle text-center" style="width: 10%">カテゴリー</th>
              <th class="align-middle text-center" style="width: 10%">投稿内容</th>
            </tr>
          </thead>
          <tbody>
            <%= render 'admin/posts/index', posts: @datas %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <% end %>
</div>