<div class="container">
  <div class="row mt-3">
    <div class="col-md-10 mx-auto text-center">
      <h3>管理者ログイン</h3>
      <%= form_with model: @user, url: new_admin_session_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label "メールアドレス", class: "col-4 mt-2" %>
          <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", class: "form-control-sm col-3" %>
        </div>
        
        <div class="form-group">
          <%= f.label "パスワード", class: "col-4 mt-2" %>
          <%= f.password_field :password, autofocus: true, class: "form-control-sm col-3" %>
        </div>
        
        <div class="actions text-center">
            <%= f.submit "ログイン", class: "btn btn-success col-4 mt-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>