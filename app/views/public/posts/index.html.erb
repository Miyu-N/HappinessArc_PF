<div class="container">
  <div class="col-md-12 mx-auto">
    <div class="mt-3 mb-3">
      <div class="items-list text-center">
          <h1>投稿一覧</h1>
          <div class="col-md-2" >
            <%= link_to '', new_post_path, class: "fas fa-plus-circle fa-3x add-item" %>
          </div>
        <% @posts.each do |post| %>
          <div class="card-deck text-center d-inline-flex mt-3 col-3">
            <div class="card border-0">
              <div class="card-img-top">
                <%= link_to attachment_image_tag(post, :image, format: "jpeg", size: "200x180", fallback: "no_image.jpg", class: "rounded"), post_path(post.id) %>
              </div>
              <div class="card-body">
                <p class="card-title">
                  <%= link_to post.title, post_path(post) %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="text-center mx-auto"></div>
  </div>
</div>