<%= form_with model:@post, local:true do |f| %>
  <div class="form-group">
  <%= f.label "写真" %>
  <%= attachment_image_tag(@post, :image, :fill, 100, 100, fallback: "no_image.jpg") %>
  </div>
  
  <div class="form-group">
    <%= f.label "タイトル" %>
    <%= f.text_field :title, class: 'form-control post_title' %>
  </div>
  
  <div class="form-group">
  <%= f.label "カテゴリー" %>
  <%= f.collection_select :category_id, Category.all, :id, :name, prompt: "--選択してください--", size: "30", class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label "投稿内容" %>
    <%= f.text_area :body, class: 'form-control post_body' %>
  </div>
  <div class="form-group">
    <%= f.submit "投稿する", class: 'btn btn-success' %>
  </div>
<% end %>