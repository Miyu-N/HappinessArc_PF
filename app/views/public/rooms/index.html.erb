<div class="container">
  <div class="col-md-12 mx-auto">
    <div class="mt-3 mb-3">
      <div class="items-list text-center">
        <h2>メッセージ一覧</h2>
          <div class="dm_list">
            <% @rooms.each do |room| %>
              <div class="dm_list__content">
                <%= link_to rooms_path(room), class: "dm_list__content__link" do %>
                  <div class="dm_list__content__link__box">
                    <h3 class="dm_list__content__link__box__name">
                      <%= opponent_user(room) %>
                    </h3>
                    <p class="dm_list__content__link__box__message">
                      <%= most_new_message_preview(room) %>
                    </p>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>