<table class="table-bordered" style="width: 100%">
  <tr>
    <th class="table-active" style="width: 10%">アイコン</th>
    <td class="align-middle">　<%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image_icon.jpg") %></td>
  </tr>
  <% if current_user != user %>
    <tr>
      <th class="table-active" style="width: 10%">ユーザーネーム</th>
      <td class="align-middle">　<%= user.username if user %></td>
    </tr>
    <tr>
      <th class="table-active" style="width: 10%">自己紹介</th>
      <td class="align-middle">　<%= user.introduction if user %></td>
    </tr>
  <% else %>
    <tr>
      <th class="table-active" style="width: 10%">名前</th>
      <td class="align-middle">　<%=  user.name if user %></td>
    </tr>
    <tr>
      <th class="table-active" style="width: 20%">メールアドレス</th>
      <td class="align-middle">　<%= user.email if user %></td>
    </tr>
    <tr>
      <th class="table-active" style="width: 10%">ユーザーネーム</th>
      <td class="align-middle">　<%= user.username if user %></td>
    </tr>
    <tr>
      <th class="table-active" style="width: 10%">自己紹介</th>
      <td class="align-middle">　<%= user.introduction if user %></td>
    </tr>
    <tr>
      <th>follows</th>
      <th><%= link_to user.followings.count, user_followings_path(user) %></th>
    </tr>
    <tr>
      <th>followers</th>
      <th><%= link_to user.followers.count, user_followers_path(user) %></th>
    </tr>
  <% end %>
</table>

<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: "btn btn-primary" %>
  <% else %>
    <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn btn-success" %>
  <% end %>
<% end %>

<% unless @user.id == current_user.id %>
  <% if current_user != user && current_user.following?(user) && user.following?(current_user)  %>
  <% if @isRoom == true %>
    <p class="user-show-room"><a href="/rooms/<%= @roomId %>" class="btn btn-primary mt-2">チャットへ</a>
  <% else %>
    <%= form_with model: @chat do |f| %>
      <%= fields_for @user_room do |e| %>
        <%= e.hidden_field :user_id, value: @user.id %>
      <% end %>
      <%= f.submit "チャットを始める", class:"btn btn-primary mt-2"%>
    <% end %>
  <% end %>
  <% end %>
<% end %>
